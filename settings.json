// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run zed: open default settings from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // Editor Fonts
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.fontWeightBold": "bold",
  "editor.fontWeightLight": "normal",

  "file_types": {
    "Ruby": ["Jenkinsfile"]
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "light": "One Light",
    "dark": "Dracula"
  },
  "experimental.theme_overrides": {
    // Change below the upper title bar background
    "title_bar.background": "#191a2e",
    // Change below the bottom status bar background
    "status_bar.background": "#191a2e",
    "toolbar.background": "#191a2e",
    // Change below the upper bar background
    "tab_bar.background": "#191a2e",
    "tab.inactive_background": "#191A22", // original in theme was "#282a36"
    "tab.active_background": "#1E1F35", // original in the theme was "#44475a",
    // Change below the left panel background
    "panel.background": "#191a2e",
    // Change below the terminal background
    "terminal.background": "#191a2e",
    // Change below the terminal text
    "terminal.foreground": "#ff6bcb",

    // Editor colors
    // Change below the non syntax text
    "editor.foreground": "#f8f8f2",
    // Change below the editor background
    "editor.background": "#191a2e",
    // Change below the editor gutter background (column with line numbers)
    "editor.gutter.background": "#191a2e",
    "editor.active_line.background": "#44475a",
    "editor.selection.background": "#44475a",
    "editor.wrap_guide": "#6272a4"
  }
}

// Dracula Color Palette:
// Pink -> #ff79c6
// Purple -> #bd93f9
// Cyan -> #8be9fd
// Green -> #50fa7b
// Yellow -> #f1fa8c
// Orange -> #ffb86c
// Red -> #ff5555
// Comment Gray -> #6272a4
// Foreground (White) -> #f8f8f2
// Background (Black) -> #282a36
// Current Line (Dark Gray) -> #44475a
// Selection (Dark Gray) -> #44475a

